<h3>Project Status<h3>
<hr>
<h2><b class="green_text"><%= @found_proj.title %></b></h2>

<% if (@volunteers_list.length == 0) %>
  <h5>("<em><%= @found_proj.title %>"</em> - doesn't have any volunteers yet)</h5>
<% else %>
  <h4>Volunteers currently assigned:</h4>
  <ul>
    <% @volunteers_list.each do |vol| %>
    <li class="blue_text center"><em><%= vol['name'] %></em></li>
    <% end %>
  </ul>
<% end %>

<br>
<br>
<div class="center">
  <a href="/delete_proj/<%=@found_proj.id%>"><button class="btn btn-warning">Remove Project</button></a>
  <a href="/"><button class="btn btn-default">Return Home</button></a>
</div>
